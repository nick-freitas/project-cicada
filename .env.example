# AWS Configuration
AWS_REGION=us-east-1
CDK_DEFAULT_ACCOUNT=your-account-id
CDK_DEFAULT_REGION=us-east-1

# Backend Environment Variables
# DynamoDB Tables
EPISODE_CONFIG_TABLE_NAME=EpisodeConfiguration
CONVERSATION_MEMORY_TABLE=ConversationMemory
USER_PROFILES_TABLE=UserProfiles
REQUEST_TRACKING_TABLE=RequestTracking
CONNECTIONS_TABLE=WebSocketConnections

# S3 Buckets
SCRIPT_BUCKET_NAME=cicada-script-data
KB_BUCKET_NAME=cicada-knowledge-base
KNOWLEDGE_BASE_BUCKET=cicada-knowledge-base

# Cognito
USER_POOL_ID=your-user-pool-id
USER_POOL_CLIENT_ID=your-client-id

# API Gateway
MESSAGE_QUEUE_URL=your-sqs-queue-url
WEBSOCKET_DOMAIN_NAME=your-websocket-domain
WEBSOCKET_STAGE=prod

# Step Functions
STATE_MACHINE_ARN=your-state-machine-arn

# AgentCore Agents
ORCHESTRATOR_AGENT_ID=your-orchestrator-agent-id
ORCHESTRATOR_AGENT_ALIAS_ID=your-orchestrator-alias-id
QUERY_AGENT_ID=your-query-agent-id
QUERY_AGENT_ALIAS_ID=your-query-alias-id
THEORY_AGENT_ID=your-theory-agent-id
THEORY_AGENT_ALIAS_ID=your-theory-alias-id
PROFILE_AGENT_ID=your-profile-agent-id
PROFILE_AGENT_ALIAS_ID=your-profile-alias-id

# AI Model Configuration
# Option 1: Use preset (recommended)
MODEL_PRESET=nova-lite
# Available presets: nova-lite, nova-micro, nova-pro, claude-sonnet, claude-haiku

# Option 2: Specify model ID and parameters directly
# MODEL_ID=amazon.nova-lite-v1:0
# MODEL_TEMPERATURE=0.7
# MODEL_MAX_TOKENS=2048
# MODEL_TOP_P=0.9

# Model usage tracking table
MODEL_USAGE_TABLE=ModelUsage

# Budget Alert Email (for cost monitoring notifications)
ALERT_EMAIL=your-email@example.com

# User Emails (for Cognito user creation and password reset)
ADMIN_EMAIL=admin@example.com
NICK_EMAIL=nick@example.com
NAIZAK_EMAIL=naizak@example.com

# Custom Domain (Optional)
# DOMAIN_NAME=your-domain.com
# FRONTEND_SUBDOMAIN=app.your-domain.com

# Frontend Environment Variables (VITE_ prefix required)
VITE_WEBSOCKET_URL=wss://your-websocket-url
VITE_API_URL=https://your-api-url

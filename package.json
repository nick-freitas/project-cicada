{
  "name": "project-cicada",
  "version": "1.0.0",
  "private": true,
  "description": "CICADA - Contextual Inference & Comprehensive Analysis Data Agent",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*",
    "infrastructure"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:nonprod": "dotenv -e .env.nonprod -- pnpm -r run build",
    "build:prod": "dotenv -e .env.prod -- pnpm -r run build",
    "test": "pnpm -r --no-bail run test",
    "test:unit": "pnpm --filter @cicada/backend run test:unit && pnpm --filter @cicada/shared-types run test && pnpm --filter @cicada/infrastructure run test",
    "test:integration": "pnpm --filter @cicada/backend run test:integration",
    "test:property": "pnpm --filter @cicada/backend run test:property",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "dev:frontend": "dotenv -e .env.nonprod -- pnpm --filter @cicada/frontend run dev",
    "dev:backend": "dotenv -e .env.nonprod -- pnpm --filter @cicada/backend run build",
    "deploy:nonprod": "dotenv -e .env.nonprod -- pnpm --filter @cicada/infrastructure run deploy",
    "deploy:prod": "dotenv -e .env.prod -- pnpm --filter @cicada/infrastructure run deploy",
    "synth:nonprod": "dotenv -e .env.nonprod -- pnpm --filter @cicada/infrastructure run synth",
    "synth:prod": "dotenv -e .env.prod -- pnpm --filter @cicada/infrastructure run synth"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "@smithy/types": "^4.9.0"
    }
  }
}
